<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/mTvModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#0B0C0C"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mTvColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#060707"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mTvRegNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#010202"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mTvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#080809"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/mImgPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>